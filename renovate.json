{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "baseBranches": ["feat/prod-payments-k8s", "feat/prod-main-test"],
  "docker": {
    "enabled": true,
    "fileMatch": ["^Dockerfile$"]
  },
  "helmv3": {
    "enabled": true,
    "fileMatch": ["(^|/)Chart\\.yaml$"]
  },
  "kubernetes": {
    "enabled": true,
    "fileMatch": ["\\.yml$", "\\.yaml$"]
  },
  "assignees": ["Jocasmen94"],
  "labels": ["dependencies"],
  "branchPrefix": "renovate/",
  "prHourlyLimit": 25,
  "prConcurrentLimit": 20,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard",
  "dependencyDashboardLabels": ["dependencies", "renovate"],
  "dependencyDashboardApproval": false,
  "dependencyDashboardAutoclose": true,
  "pruneStaleBranches": true,
  "recreateWhen": "auto",
  "dependencyDashboardFooter": "\n- [ ] <!-- manual job -->Check this box to trigger a request for Renovate to run again on this repository\n",
  "prCreation": "immediate",
  "onboarding": false,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.yaml$"],
      "matchStrings": [
        "apiVersion:\\s*argoproj\\.io/v1alpha1\\s*\\n.*kind:\\s*Application\\s*\\n.*sources:\\s*\\n.*-.*chart:\\s*(?<depName>[^\\s]+)\\s*\\n.*targetRevision:\\s*(?<currentValue>[^\\s]+)\\s*\\n.*repoURL:\\s*(?<registryUrl>[^\\s]+)"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "{{{depName}}}",
      "registryUrlTemplate": "{{{registryUrl}}}",
      "versioningTemplate": "semver"
    }
  ]
}

