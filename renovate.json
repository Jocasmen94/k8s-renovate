{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": ["\\.yml$", "\\.yaml$"]
  },
  "dockerfile": {
    "fileMatch": ["^Dockerfile$"]
  },
  "prHourlyLimit": 10,
  "prConcurrentLimit": 5,
  "prCreationRetries": 3
}